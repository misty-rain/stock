<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.mistyrain.stock"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- if you want to load images from the internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- if you want to load images from a file OR from the internet -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mistyrain.stock.ui.splash.Splash"
            android:label="@string/title_activity_bnb">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.mistyrain.stock.ui.main.MainActivity">
        </activity>
        <activity android:name=".ui.feedback.FeedBackActivity"></activity>
        <activity android:name=".ui.about.AboutActivity"></activity>
        <activity android:name=".ui.register.RegisterActivity"></activity>
        <activity android:name=".ui.transfer.TransferActivity"></activity>
        <activity android:name=".ui.user.UserProfileActivity"></activity>
        <activity android:name=".ui.login.LoginActivity"></activity>
    </application>

</manifest>